{
  "name": "andromeda",
  "version": "2.0.1",
  "description": "Andromeda is a template to build modern WebApp/PWA with React.JS on a top of a server builded with Express.js",
  "main": "./dist/server.js",
  "repository": "https://github.com/reverb6821/andromeda.git",
  "author": "Giuseppe Gigliotti <giuseppegigliottidev@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "server:install": "cd server/ && npm install",
    "client:install": "cd client/ && npm install",
    "app:install":"concurrently \"npm run api:install\" \"npm run client:install\"",
    "app:serve:dev": "cd server/ && npm run start",
    "client:serve:dev": "cd client/ && npm run dev",
    "app:dev":"concurrently \"npm run app:serve:dev\" \"npm run client:serve:dev\""
  },
  "dependencies": {
    "concurrently": "^7.4.0"
  }
}
